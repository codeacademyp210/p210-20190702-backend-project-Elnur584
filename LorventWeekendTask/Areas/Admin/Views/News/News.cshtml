@model LorventWeekendTask.Areas.Admin.ViewModels.NewsViewModel
@{
    ViewBag.Title = "News";
}
@section style{

    <link href="~/Areas/Public/vendors/air-datepicker-master/dist/css/datepicker.min.css" rel="stylesheet" type="text/css">
    <!-- end of global css -->
    <!-- page level css -->
    <link type="text/css" href="~/Areas/Public/vendors/jquery-circliful/css/jquery.circliful.css" rel="stylesheet">
    <!-- <link rel="stylesheet" type="text/css" href="~/Areas/Public/vendors/jquery-plugin-circliful-master/css/jquery.circliful.css"> -->
    <link type="text/css" href="~/Areas/Public/vendors/progressbar/css/bootstrap-progressbar.min.css" rel="stylesheet">
    <link type="text/css" href="~/Areas/Public/vendors/fullcalendar/css/fullcalendar.css" rel="stylesheet">
    <link type="text/css" href="~/Areas/Public/vendors/select/dist/css/bootstrap-select.min.css" rel="stylesheet">
    <link type="text/css" href="~/Areas/Public/css/custom_css/calendar_custom.css" rel="stylesheet">
    <link type="text/css" href="~/Areas/Public/vendors/sweetalert/dist/sweetalert2.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="~/Areas/Public/vendors/nvd3chart/nv.d3.min.css">
    <link type="text/css" href="~/Areas/Public/css/custom_css/fitness.css" rel="stylesheet" />
    <link type="text/css" href="~/Areas/Public/css/custom_css/panel.css" rel="stylesheet" />
    <link type="text/css" href="~/Areas/Public/css/custom_css/admin_dashboard.css" rel="stylesheet">}
<aside class="right-side right-padding">
    <section class="content-header">
        <!--section starts-->
        <h2>News</h2>
        <ol class="breadcrumb">
            <li>
                <a href="index.html">
                    <i class="fa fa-fw fa-home"></i> Dashboard
                </a>
            </li>
            <li>
                <a href="#">News</a>
            </li>
            <li>
                <a href="news.html">News</a>
            </li>
        </ol>
    </section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <!-- Basic charts strats here-->
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h4 class="panel-title">
                            <i class="fa fa-newspaper-o" aria-hidden="true"></i> News
                        </h4>
                        <span class="pull-right">
                            <i class="glyphicon glyphicon-chevron-up showhide clickable"></i>
                            <i class="glyphicon glyphicon-remove removepanel"></i>
                        </span>
                    </div>
                    <div class="panel-body table-responsive">
                        <table class="table table-bordered text-center" id="fitness-table">
                            <thead>
                                <tr>
                                    <th class="text-center">Date</th>
                                    <th class="text-center">Category</th>
                                    <th class="text-center">Title</th>
                                    <th class="text-center">Edit/Save</th>
                                    <th class="text-center">Delete/Cancel</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var newitem in Model.NewsAdd)
                                {
                                    <tr>
                                        <td>@newitem.DateTime</td>
                                        <td>@newitem.Category</td>
                                        <td>@newitem.Title</td>
                                        <td>
                                            <a class="edit btn btn-primary" href="@Url.Action("EditForm","News")">
                                                <i class="fa fa-fw fa-edit"></i> Edit
                                            </a>
                                        </td>
                                        <td>
                                            <a class="delete btn btn-danger" href="javascript:;">
                                                <i class="fa fa-trash-o"></i> Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                               
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</aside>
@section script{
    <!-- global js -->
    <script src="~/Areas/Public/js/jquery.min.js" type="text/javascript"></script>
    <script src="~/Areas/Public/js/bootstrap.min.js" type="text/javascript"></script>
    <script src="~/Areas/Public/js/custom_js/app.js" type="text/javascript"></script>
    <script src="~/Areas/Public/js/custom_js/metisMenu.js" type="text/javascript"></script>
    <script src="~/Areas/Public/js/custom_js/backstretch.js"></script>
    <!-- end of global level js -->
    <script src="~/Areas/Public/vendors/jquery-circliful/js/jquery.circliful.min.js" type="text/javascript"></script>
    <script src="~/Areas/Public/vendors/progressbar/bootstrap-progressbar.min.js" type="text/javascript"></script>
    <script src="~/Areas/Public/vendors/countUp/countUp.js" type="text/javascript"></script>
    <script src="~/Areas/Public/vendors/moment/min/moment.min.js" type="text/javascript"></script>
    <!-- date picker -->
    <script src="~/Areas/Public/vendors/air-datepicker-master/dist/js/datepicker.min.js"></script>
    <script src="~/Areas/Public/vendors/air-datepicker-master/dist/js/i18n/datepicker.en.js"></script>
    <!-- date picker end -->
    <script src="~/Areas/Public/vendors/sweetalert/dist/sweetalert2.js" type="text/javascript"></script>
    <script src="~/Areas/Public/vendors/fullcalendar/fullcalendar.js" type="text/javascript"></script>
    <script src="~/Areas/Public/vendors/d3-chart/d3.v3.min.js" type="text/javascript"></script>
    <script src="~/Areas/Public/vendors/nvd3chart/nv.d3.min.js" type="text/javascript"></script>
    <script type="text/javascript" src="~/Areas/Public/vendors/jquery-easy-ticker-master/jquery.easy-ticker.min.js"></script>
    <script src="~/Areas/Public/vendors/inputmask/inputmask/inputmask.js" type="text/javascript"></script>
    <script src="~/Areas/Public/vendors/inputmask/inputmask/jquery.inputmask.js" type="text/javascript"></script>
    <script src="~/Areas/Public/vendors/inputmask/inputmask/inputmask.date.extensions.js" type="text/javascript"></script>
    <script src="~/Areas/Public/js/custom_js/admin_index.js" type="text/javascript"></script>
}