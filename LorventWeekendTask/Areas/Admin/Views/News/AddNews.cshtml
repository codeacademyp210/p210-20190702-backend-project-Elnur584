    <script src="~/Areas/Public/vendors/tags/dist/bootstrap-tagsinput.js" type="text/javascript"></script>
    <script src="~/Areas/Public/vendors/select2/js/select2.full.js" type="text/javascript"></script>
    <script src="~/Areas/Public/vendors/moment/moment.js" type="text/javascript"></script>
    <script src="~/Areas/Public/vendors/bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js" type="text/javascript"></script>
    <script src="~/Areas/Public/vendors/bootstrapvalidator/dist/js/bootstrapValidator.js" type="text/javascript"></script>
    <script src="~/Areas/Public/vendors/sweetalert/dist/sweetalert2.js" type="text/javascript"></script>
    <script src="~/Areas/Public/js/custom_js/add_news.js" type="text/javascript"></script>

    <!-- end of page level js -->
