@model LorventWeekendTask.Areas.Admin.Models.NewsAdd

@{
    /**/

    /**/

    Layout = null;
}

    <div class="container">
        <div class="row">
            
            <div class="col-md-6">
                <h1 class="text-center text-color">Update</h1>
                @using (Html.BeginForm())
                {

                    <div class="form-group">
                        @Html.LabelFor(m => m.DateTime)<br />
                        @Html.TextBoxFor(m => m.DateTime, new { @class = "form-control" })
                    </div><br />
                    <div class="form-group">
                        @Html.LabelFor(m => m.Category)<br />
                        @Html.TextBoxFor(m => m.Category, new { @class = "form-control" })
                    </div><br />

                    <div class="form-group">
                        @Html.LabelFor(m => m.Title)<br />
                        @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                    </div>
                    <br />
                    @Html.HiddenFor(m=>m.Id)
                    <button type="submit" class="btn btn-info">Submit</button>
                }


            </div>
        </div>
    </div>

